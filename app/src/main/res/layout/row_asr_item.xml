<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/view_foreground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="@dimen/_5sdp">

        <TextView
            android:id="@+id/ItemCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:text="CDHWCU015000"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSerial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ItemCode"
            android:layout_alignStart="@+id/ItemCode"
            android:layout_marginEnd="24dp"
            android:layout_toStartOf="@+id/btnCheck"
            android:text="CDHWCU015000"
            android:textAllCaps="true"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/tvIssue_no"
            android:layout_width="243dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvSerial"
            android:layout_alignStart="@+id/ItemCode"
            android:layout_marginEnd="24dp"
            android:layout_toStartOf="@+id/btnCheck"
            android:text="7245095"
            android:textAllCaps="true"
            android:textSize="@dimen/_12sdp" />
        

        <TextView
            android:id="@+id/seq_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:text="051"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/btnCheck"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tvType"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="2dp"
            android:background="@drawable/checkbox_selector"
            android:button="@null"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginBottom="-10dp"
            />

        <TextView
            android:id="@+id/tvModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/btnCheck"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="47dp"
            android:layout_marginBottom="20dp"
            android:layout_toEndOf="@+id/ItemCode"
            android:textSize="@dimen/_12sdp"
            android:text="REFURBISH"
            android:textColor="@color/colorPrimary"
            android:textStyle="normal|bold" />

    </RelativeLayout>
</LinearLayout>